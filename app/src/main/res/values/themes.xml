<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Styleshuffle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff9fdc</item>
        <item name="colorPrimaryVariant">#ff9fdc</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">#ff9fdc</item>
    </style>

    <style name="CustomDropdownMenuOverlay">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size as needed -->
        <item name="android:height">40dp</item> <!-- Adjust the height as needed -->
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">4dp</item> <!-- Adjust the padding as needed -->
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Theme.Styleshuffle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Styleshuffle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Styleshuffle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>